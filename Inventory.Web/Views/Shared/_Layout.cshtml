<!--SB ADMIN 2 Scripts-->
    <script src="~/Scripts/LayOut/sb-admin-2.js"></script>
    <script src="~/Scripts/metisMenu/metisMenu.min.js"></script>

@RenderSection("scripts", required: false)
</body>
</html>
