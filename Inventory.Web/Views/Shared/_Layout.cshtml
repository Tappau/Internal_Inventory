                            <li>
                                <a href="@Url.Action("Buttons", "Samples")">Buttons</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Notifications", "Samples")">Notifications</a>
                            </li>
                           <li>
                                <a href="@Url.Action("Icons", "Samples")"> Icons</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Grid", "Samples")">Grid</a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                </ul>
            </div>
        </div>

    </nav>
